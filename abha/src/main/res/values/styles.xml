<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <!--  <item name="colorPrimaryDark">#3949AB</item>-->
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:editTextStyle">@android:style/Widget.EditText</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/theme_color</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorControlHighlight">@color/light_gray</item>
        <item name="actionBarStyle">@style/CustomTheme.ActionBarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButton</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="CustomTheme.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/CustomTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">#8B0000</item>
    </style>
    <style name="actionOverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="CustomTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/gray72</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>